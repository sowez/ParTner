<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.partner"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.partner.LoadingActivity"
            android:theme="@style/Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.partner.LoginActivity" />
        <activity android:name="com.example.partner.SignUpActivity" />
        <activity android:name="com.example.partner.TrainerSignUpActivity" />
        <activity android:name="com.example.partner.UserSignUpActivity" />
        <activity android:name="com.example.partner.MainActivity" />
        <activity android:name="com.example.partner.TrainerMainMenuActivity" />
        <activity android:name="com.example.partner.UserMainMenuActivity" />
        <activity android:name="com.example.partner.TrainerListActivity" >
        </activity>
        <activity android:name="com.example.partner.TrainerProfileEditActivity" />
        <activity android:name="com.example.partner.TrainerCallHistoryActivity" />
        <activity
            android:name="com.example.partner.PopupTrainerInfoActivity"
            android:theme="@style/popupTheme" />
        <activity
            android:name="com.example.partner.PopupTrainFinishedActivity"
            android:theme="@style/popupTheme" />
        <activity android:name="com.example.partner.UserProfileActivity" />
        <activity android:name="com.example.partner.UserProfileEditActivity" />
        <activity android:name="com.example.partner.UserCallHistoryActivity" />
        <activity
            android:name="com.gun0912.tedpermission.TedPermissionActivity"
            android:configChanges="mcc|mnc|locale|keyboard|keyboardHidden|screenLayout|fontScale|uiMode|orientation|screenSize|layoutDirection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent.Permission" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.partner.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>