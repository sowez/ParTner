<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/trainer_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:theme="@style/EditTheme" />

        <Button
            android:id="@+id/btn_trainerid_overlap_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorTurbid"
            android:text="아이디 중복 체크"
            android:textColor="@color/white" />

    </LinearLayout>

    <EditText
        android:id="@+id/trainer_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:theme="@style/EditTheme" />

    <EditText
        android:id="@+id/trainer_pw_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        android:theme="@style/EditTheme" />


    <RadioGroup
        android:id="@+id/trainer_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/trainer_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="남성"
            android:theme="@style/CheckTheme" />

        <RadioButton
            android:id="@+id/trainer_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성"
            android:theme="@style/CheckTheme" />

    </RadioGroup>

    <EditText
        android:id="@+id/trainer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="이름"
        android:theme="@style/EditTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="운동 분야 선택" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요가"
            android:theme="@style/CheckTheme" />

        <CheckBox
            android:id="@+id/check_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="근력운동"
            android:theme="@style/CheckTheme" />

        <CheckBox
            android:id="@+id/check_pilates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필라테스"
            android:theme="@style/CheckTheme" />

        <CheckBox
            android:id="@+id/check_stretching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스트레칭"
            android:theme="@style/CheckTheme" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="프로필 이미지 업로드" />


        <ImageView
            android:id="@+id/signup_trainer_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/profile_image" />

        <Button
            android:id="@+id/btn_gallery_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorMoreTurbid"
            android:text="갤러리에서 가져오기"
            android:layout_gravity="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_trainer_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorTurbid"
            android:text="회원가입 완료!"
            android:textSize="20dp"
            android:textColor="@color/white" />


</LinearLayout>